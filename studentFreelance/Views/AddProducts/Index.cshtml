@model IEnumerable<studentFreelance.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" data-toggle="ajax-modal" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productnamec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.productnamec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.productid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.productid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.productid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
